{{#if clients}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>N°</th>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Teléfono</th>
        <th>Genero</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each clients}}
        <tr>
          <td><strong></strong>{{@index}}</strong></td>
          <td>{{name}}</td>
          <td>{{email}}</td>
          <td>{{phone}}</td>
          <td>{{gender}}</td>
          <td>
            <a href="/clients/{{_id}}/delete" class="btn btn-danger">
              Delete
            </a>
            <a href="/clients/{{_id}}/edit" class="btn btn-info">
              Edit
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>No hay clientes</h1>
      <img src="/icons/empty.svg" class="w-75" />
    </div>

  </div>
{{/if}}