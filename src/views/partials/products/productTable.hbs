{{#if products}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>N°</th>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Cantidad</th>
        <th>Precio</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <td><strong></strong>{{@index}}</strong></td>
          <td>{{name}}</td>
          <td>{{description}}</td>
          <td>{{quantity}}</td>
          <td>{{price}}</td>
          <td>
            <a href="/products/{{_id}}/delete" class="btn btn-danger">
              Delete
            </a>
            <a href="/products/{{_id}}/edit" class="btn btn-info">
              Edit
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>No hay productos</h1>
      <img src="/icons/empty.svg" class="w-75" />
    </div>

  </div>
{{/if}}